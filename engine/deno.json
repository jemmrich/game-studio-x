{
  "name": "@gsx/engine",
  "version": "0.1.0",
  "exports": "./src/mod.ts",
  
  "tasks": {
    "test": "deno run -A --node-modules-dir=auto npm:vitest run",
    "test:watch": "deno run -A --node-modules-dir=auto npm:vitest",
    "test:ui": "deno run -A --node-modules-dir=auto npm:vitest --ui",
    "lint": "deno lint src/",
    "fmt": "deno fmt src/",
    "fmt:check": "deno fmt --check src/",
    "check": "deno check src/mod.ts"
  },
  
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "vitest": "npm:vitest@^3.0.0",
    "@vitest/ui": "npm:@vitest/ui@^3.0.0"
  },
  
  "lint": {
    "rules": {
      "tags": ["recommended"]
    },
    "exclude": ["working-on/"]
  },
  
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "exclude": ["working-on/"]
  },
  
  "test": {
    "include": ["src/**/*.test.ts"]
  },
  
  "exclude": [
    "working-on/",
    "docs/"
  ]
}